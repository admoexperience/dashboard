<% content_for :title do %>My super sweet dashboard<% end %>
<script type='text/javascript'>
  $(function() {
    Dashing.widget_base_dimensions = [360, 245];
    Dashing.numColumns = 5;
});
</script>
<div class="gridster">
  <ul>
    <% units = (ENV['UNITS2']|| 'Admo-HP').split(',')
    units.each do |unit |%>
     <li data-row="1" data-col="1" data-sizex="4" data-sizey="2">
        <div data-view="Unit" data-id="<%= unit%>" data-name="<%= unit%>"></div>
      </li>
    <% end%>
    <li data-row="1" data-col="5" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/admo-logo.png"></div>
    </li>

    <li data-row="3" data-col="5" data-sizex="4" data-sizey="2">
      <div data-view="Iframe" data-url="http://status.admo.co"></div>
    </li>
  </ul>
</div>
