<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-view="Image" data-image="/admo-logo.png"></div>
    </li>
    <li data-row="3" data-col="1" data-sizex="1" data-sizey="2">
      <div data-view="Clock"></div>
    </li>

    <% units = (ENV['UNITS']|| 'Admo-1,Admo-2').split(',')
    units.each do |unit |%>
     <li data-row="3" data-col="2" data-sizex="4" data-sizey="2">
        <div data-view="Unit" data-id="<%= unit%>" data-name="<%= unit%>"></div>
      </li>
  <% end%>

  </ul>
</div>
